
@{
    ViewData["Title"] = "Detail";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="book-container">
    <h2>Book Details</h2>

    <!-- Book Image -->
    <div class="book-image">
        <img src="path-to-your-book-image.jpg" alt="Book Image">
    </div>

    <!-- Book Details -->
    <div class="book-details">
        <div>
            <label>Book ID:</label>
            <p>#12345</p>
        </div>
        <div>
            <label>Book Name:</label>
            <p>The Great Gatsby</p>
        </div>
        <div>
            <label>Author:</label>
            <p>F. Scott Fitzgerald</p>
        </div>
        <div>
            <label>Quantity:</label>
            <p>10</p>
        </div>
        <div>
            <label>Price:</label>
            <p>150,000 VND</p>
        </div>
        <div>
            <label>Category:</label>
            <p>Fiction</p>
        </div>
        <div>
            <label>Publication Date:</label>
            <p>1925-04-10</p>
        </div>
    </div>

    <!-- Book Description -->
    <div class="book-description">
        <label>Description:</label>
        <p>
            The Great Gatsby is a classic American novel written by F. Scott Fitzgerald. The story is set in the 1920s and follows the mysterious and wealthy Jay Gatsby and his obsession with the beautiful Daisy Buchanan. It is a tale of love, wealth, and tragedy that explores themes of the American Dream and social decay.
        </p>
    </div>
</div>

